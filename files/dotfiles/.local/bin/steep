#!/usr/bin/env bash

#
# Updates various package managers and components.
# Author: Brad Frank
# Date: Sept 2021
# Tested: GNU bash, version 5.1.8(1)-release (x86_64-apple-darwin20.3.0)
#

if ! xcode-select --version &> /dev/null; then xcode-select --install; fi
if [[ -n $HOMEBREW_PREFIX ]]; then brew update && brew upgrade && brew autoremove && brew cleanup; fi
if which bat &> /dev/null; then bat cache --clear && bat cache --build; fi
if kubectl krew version &> /dev/null; then kubectl krew update && kubectl krew upgrade; fi
if which gcloud &> /dev/null; then gcloud components update --quiet; fi
